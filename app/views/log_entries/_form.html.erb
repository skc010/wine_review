<%= form_for( [ @wine, @log_entries ] ) do |f| %>
  <%= render 'shared/validation_errors', object: @log_entries %>

  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, placeholder: 'Name' %><br />
  <%= f.label :location %>
  <%= f.text_field :location, placeholder: 'Location' %><br />
  <%= f.label :rating %>  
  <% LogEntry::RATINGS.each do |rating| %>
    <%= f.radio_button :rating, rating %> <%= rating %>
  <% end %><br />
  <%= f.label :tasted_on %>
  <%= f.date_select :tasted_on%><br />
  <%= f.label :comments %><br/>
  <%= f.text_area :comments %><br/>
  <p>
    <%= f.submit %>
    <%= link_to 'Cancel', wine_log_entries_path(@wine), id: 'cancel log entry' %>
  </p>
<% end %>